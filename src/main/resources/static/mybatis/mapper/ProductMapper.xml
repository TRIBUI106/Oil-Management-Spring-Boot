<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chez1s.QuanLyKhoNhot.mapper.ProductMapper">

    <resultMap id="BaseResultMap" type="Product">
        <id property="id" column="product_id" />
        <id property="code" column="product_code" />
        <id property="name" column="product_name" />
        <id property="capacity" column="capacity" />
        <id property="brand" column="brand" />
        <id property="currentStock" column="current_stock" />
        <id property="newStock" column="new_stock" />
    </resultMap>

    <sql id="BaseColumn">
        id,
        code,
        name,
        capacity,
        brand,
        currentStock,
        newStock
    </sql>

    <select id="getAllProduct">
        SELECT p.product_id AS id
                   p.product_code AS code
                   p.product_name AS name
                   p.capacity AS capacity
                   p.brand AS brand
                   p.current_stock AS currentStock
                   p.new_stock AS newStock
            FROM products p
    </select>

</mapper>